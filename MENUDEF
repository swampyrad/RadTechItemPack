// It'll be a goal to eventually get this all working off of sliders instead of an OptionValue for more fine tuning for players as the event handler doesn't
// have to work off of only OptionValues as it can be anything between -1 and 199 to my knowledge and probably go higher/lower. 
// Currently though I just don't exactly know how they work perfectly and have struggled getting it to work so that'll be a future pr as it's not
// strictly necessary for release. - [Ted]

OptionMenu RadTechItemPack
{
    Title "------ Radtech Item Pack ------"
    StaticText ""
    StaticText "--- Equipment ---", "Green"
    StaticText ""
    Submenu "$TAG_JACKET", "LeatherArmour", 0, 1
    StaticText ""
    Submenu "$TAG_GRAVBOOTS", "AntiGravBoots", 0, 1
    StaticText ""
    Submenu "$TAG_RADBOOTS", "AntiRadBoots", 0, 1
    StaticText ""
	Submenu "$TAG_HALFPACK", "HalfPack", 0, 1
	StaticText ""
    StaticText "--- Medical ---", "Green"
	StaticText ""
    Submenu "$TAG_FIELDMEDICKIT", "FieldMedicKit", 0, 1
    StaticText ""
    Submenu "$TAG_FIRSTAIDSPRAY", "FirstAidSpray", 0, 1
    StaticText ""
    Submenu "$TAG_RADICOLA", "RadiCola", 0, 1
    StaticText ""
    StaticText "--- Reset Options ---", "red"
	StaticText ""
	SafeCommand "Reset all options for Radtech Weapons", "RTIP_Reset_Cvars"
}

AddOptionMenu "OptionsMenu"
{
    Submenu "$RADTECHITEMS_MENU", "RadTechItemPack"
}

AddOptionMenu "HDAddonMenu"
{
    Submenu "$RADTECHITEMS_MENU", "RadTechItemPack"
}

OptionMenu LeatherArmour
{
    Title "$MENU_TITLEJACKET"
   	StaticText "$MENU_NOTICE", "Green"
    StaticText  "$MENU_SUPPRESS1", "white"
    StaticText  "$MENU_SUPPRESS2", "white"
    StaticText ""
	StaticText "$MENU_SPAWNOPTIONS", "Green"
    StaticText  "$MENU_JACKETTEXT1", "white"
	Option "$MENU_WEPSPAWNRATE", "jacketarmour_greenarmour_spawn_bias", "SpawnBias"
	SafeCommand "$MENU_RESETWEP", "resetcvar jacketarmour_greenarmour_spawn_bias"
	StaticText ""
    StaticText  "$MENU_JACKETTEXT2", "white"
	Option "$MENU_WEPSPAWNRATE", "jacketarmour_bluearmour_spawn_bias", "SpawnBias"
	SafeCommand "$MENU_RESETWEP", "resetcvar jacketarmour_bluearmour_spawn_bias"
	StaticText ""
	StaticText  "$MENU_JACKETBACKPACK", "white"
	Option "$MENU_BACKPACKSALLOWED", "jacketarmour_allowBackpacks", "OnOff"
 	StaticText ""
    StaticText  "$MENU_REPLACEAFTERMAPLOAD", "white"
	Option "$MENU_PERSISTENCY", "jacketarmour_persistent_spawning", "OnOff"
	SafeCommand "$MENU_RESETPERSISTENCY", "resetcvar jacketarmour_persistent_spawning"
 	StaticText ""
   	StaticText ""
	StaticText "$MENU_RESETOPTIONS", "Green"
	SafeCommand "$MENU_RESETALLOPTIONS", "jacket_reset_cvars"
	StaticText ""
	StaticText "$MENU_LORETAG", "Green"
	StaticText ""
	StaticText "$MENU_JACKETLORE1", "white"
	StaticText "$MENU_JACKETLORE2", "white"
	StaticText "$MENU_JACKETLORE3", "white"
}

